<UserControl x:Class="TheDebtBook.Views.DebtorsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TheDebtBook.Views"
             mc:Ignorable="d" 
             d:DesignHeight="200" d:DesignWidth="200">
    <Grid>
        <StackPanel>
            <TextBlock Text="Debtors:" HorizontalAlignment="Center"/>
            <ToolBar HorizontalAlignment="Center">
                <Button Content="Add"/>
                <Button Content="Edit"/>
                <Button Content="Remove"/>
            </ToolBar>
            <DataGrid MinHeight="150" MinWidth="170"/>
        </StackPanel>
    </Grid>
</UserControl>
